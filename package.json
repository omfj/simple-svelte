{
	"name": "simple-svelte",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@8.10.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "eslint .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"db:generate": "drizzle-kit generate:pg",
		"db:migrate": "pnpm run exec ./drizzle/migrate.ts",
		"db:check-migrations": "pnpm run exec ./drizzle/check-migrations.ts",
		"db:seed": "pnpm run exec ./drizzle/seed.ts",
		"db:studio": "drizzle-kit studio",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"typecheck": "tsc --noEmit",
		"exec": "vite-node --options.transformMode.ssr='/.*/'"
	},
	"dependencies": {
		"@types/bcryptjs": "^2.4.5",
		"bcryptjs": "^2.4.3",
		"dotenv": "^16.3.1",
		"drizzle-orm": "^0.28.6",
		"drizzle-zod": "^0.5.1",
		"pg": "^8.11.3",
		"postgres": "^3.4.2",
		"svelte-sonner": "^0.3.0",
		"sveltekit-superforms": "^1.9.0",
		"uuid": "^9.0.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@playwright/test": "^1.39.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.27.2",
		"@types/pg": "^8.10.7",
		"@typescript-eslint/eslint-plugin": "^6.9.1",
		"@typescript-eslint/parser": "^6.9.1",
		"autoprefixer": "^10.4.16",
		"drizzle-kit": "^0.19.13",
		"eslint": "^8.52.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.34.0",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.2.2",
		"svelte-check": "^3.5.2",
		"tailwindcss": "^3.3.5",
		"tslib": "^2.6.2",
		"tsx": "^3.14.0",
		"typescript": "^5.2.2",
		"vite": "^4.5.0",
		"vite-node": "^0.34.6",
		"vitest": "^0.34.6"
	}
}
